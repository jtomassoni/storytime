// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  USER
  ADMIN
}

model User {
  id                    String   @id @default(cuid())
  email                 String   @unique
  name                  String?
  hashedPassword        String?
  role                  UserRole @default(USER)
  isPaid                Boolean  @default(false)
  stripeCustomerId      String?  @unique // Stripe customer ID for subscription management
  subscriptionEndsAt     DateTime? // When subscription expires
  passwordResetToken    String?  @unique // Token for password reset
  passwordResetExpires  DateTime? // When the reset token expires
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt

  preferences UserPreferences?

  @@map("users")
}

model UserPreferences {
  id              String   @id @default(cuid())
  userId          String   @unique
  preferredGender String?  // 'boy' or 'girl' - determines which gender version to show
  childAge        Int?     // Child's age for age-appropriate stories
  preferredValues String[] @default([]) // Just 1-2 key values like ["kindness", "courage"]
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("user_preferences")
}

model Story {
  id                       String  @id @default(cuid())
  title                    String
  shortDescription         String
  fullText                 String // full story (default/fallback version)
  boyStoryText             String? // gender-specific version for boys
  girlStoryText            String? // gender-specific version for girls
  
  minAge                   Int?
  maxAge                   Int?
  estimatedReadTimeMinutes Int?
  isActive                 Boolean @default(true)

  // Simple metadata
  valuesTags         String[] @default([]) // e.g. ["kindness", "courage"]
  topicTags          String[] @default([]) // e.g. ["bedtime", "forest"]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  storyOfTheDayEntries StoryOfTheDay[]

  @@map("stories")
}

model StoryOfTheDay {
  id      String   @id @default(cuid())
  date    DateTime @unique
  storyId String

  story Story @relation(fields: [storyId], references: [id], onDelete: Cascade)

  @@map("story_of_the_day")
}
